{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "height": 220,
  "signals": [
    {
      "name": "columnMargin",
      "value": 1
    },
    {
      "name": "minGroupMargin",
      "value": 4
    },
    {
      "name": "numberOfDataSeries",
      "value": null
    },
    {
      "name": "columnWidth",
      "update": "bandwidth('xScale')"
    },
    {
      "name": "binnedColumnWidth",
      "update": "columnWidth > (36 + minGroupMargin + columnMargin) ? 36 : columnWidth > (28 + minGroupMargin + columnMargin) ? 24 : columnWidth > (16 + minGroupMargin + columnMargin) ? 16 : 8"
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [],
      "transform": [
        {
          "type": "stack",
          "groupby": ["xValue"],
          "sort": {
            "field": "cValue"
          },
          "field": "yValue",
          "as": ["startY", "endY"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xScale",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "xValue"
      },
      "padding": 0,
      "round": true
    },
    {
      "name": "yScale",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "endY"
      },
      "nice": true,
      "zero": true,
      "round": true
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_normal"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    },
    {
      "name": "colorScaleLight",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_light"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "xc": {
            "signal": "scale('xScale', datum.xValue) + bandwidth('xScale')/2"
          },
          "width": {
            "signal": "binnedColumnWidth"
          },
          "y": {
            "scale": "yScale",
            "field": "startY"
          },
          "y2": {
            "scale": "yScale",
            "field": "endY"
          },
          "fill": [
            {
              "test": "datum.colorLight && datum.isHighlighted === false",
              "field": "colorLight"
            },
            {
              "test": "datum.color && datum.isHighlighted === true",
              "field": "color"
            },
            {
              "test": "datum.isHighlighted === true",
              "scale": "colorScale",
              "field": "cValue"
            },
            {
              "test": "datum.isHighlighted === false",
              "scale": "colorScaleLight",
              "field": "cValue"
            },
            {
              "test": "datum.color",
              "field": "color"
            },
            {
              "scale": "colorScale",
              "field": "cValue"
            }
          ]
        }
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xScale",
      "grid": false,
      "domain": false,
      "ticks": false,
      "labelSeparation": 4,
      "encode": {
        "title": {
          "update": {
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "top"
            },
            "x": {
              "signal": "width"
            },
            "y": {
              "value": 30
            }
          }
        }
      }
    },
    {
      "orient": "left",
      "scale": "yScale",
      "domain": false,
      "grid": true,
      "tickCount": 4
    }
  ],
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "config": {
    "axis": {
      "bandPosition": 0,
      "padding": 0.4,
      "zero": true,
      "grid": true,
      "gridColor": "#e9e9ee",
      "labels": true,
      "labelAngle": 0,
      "labelBound": false,
      "labelFlush": false,
      "labelFlushOffset": false,
      "ticks": true
    }
  }
}
