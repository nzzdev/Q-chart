{
  "signals": [
    {
      "name": "height",
      "update": "span(range('yScale'))"
    },
    {
      "name": "numberOfDataSeries",
      "value": 1
    },
    {
      "name": "labelHeight",
      "value": 0
    },
    {
      "name": "barWidth",
      "value": 24
    },
    {
      "name": "groupPadding",
      "value": 16
    },
    {
      "name": "groupHeight",
      "update": "barWidth + labelHeight + groupPadding"
    },
    {
      "name": "debugView",
      "value": false
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [],
      "transform": [
        {
          "type": "stack",
          "groupby": ["xValue"],
          "sort": {
            "field": "cValue"
          },
          "field": "yValue",
          "as": ["startY", "endY"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xScale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "endY"
      },
      "nice": true,
      "zero": true,
      "round": true
    },
    {
      "name": "yScale",
      "type": "band",
      "range": {
        "step": {
          "signal": "groupHeight"
        }
      },
      "domain": {
        "data": "table",
        "field": "xValue"
      },
      "paddingInner": {
        "signal": "groupPadding / groupHeight"
      },
      "paddingOuter": 0,
      "round": true
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_normal"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    },
    {
      "name": "colorScaleLight",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_light"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "name": "blocks",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "xValue"
        }
      },
      "encode": {
        "enter": {
          "y": {
            "scale": "yScale",
            "field": "xValue"
          },
          "x": {
            "value": 0
          },
          "height": {
            "signal": "bandwidth('yScale')"
          }
        }
      },
      "signals": [
        {
          "name": "height",
          "update": "bandwidth('yScale') - labelHeight"
        }
      ],
      "marks": [
        {
          "type": "group",
          "encode": {
            "enter": {
              "y": {
                "signal": "labelHeight"
              },
              "x": {
                "value": 0
              },
              "width": {
                "signal": "width"
              },
              "height": {
                "signal": "height"
              }
            }
          },
          "scales": [
            {
              "name": "barPositionBand",
              "type": "band",
              "range": "height",
              "domain": {
                "data": "series",
                "field": "xValue"
              },
              "paddingOuter": 0
            }
          ],
          "data": [
            {
              "name": "xValues",
              "source": "series",
              "transform": [
                {
                  "type": "aggregate",
                  "groupby": ["xValue"]
                }
              ]
            }
          ],
          "marks": [
            {
              "type": "rect",
              "name": "bar",
              "from": {
                "data": "series"
              },
              "encode": {
                "enter": {
                  "y": {
                    "scale": "barPositionBand",
                    "field": "xValue"
                  },
                  "height": {
                    "signal": "bandwidth('barPositionBand')"
                  },
                  "x": {
                    "scale": "xScale",
                    "field": "startY"
                  },
                  "x2": {
                    "scale": "xScale",
                    "field": "endY"
                  },
                  "fill": [
                    {
                      "test": "datum.colorLight && datum.isHighlighted === false",
                      "field": "colorLight"
                    },
                    {
                      "test": "datum.color && datum.isHighlighted === true",
                      "field": "color"
                    },
                    {
                      "test": "datum.isHighlighted === true",
                      "scale": "colorScale",
                      "field": "cValue"
                    },
                    {
                      "test": "datum.isHighlighted === false",
                      "scale": "colorScaleLight",
                      "field": "cValue"
                    },
                    {
                      "test": "datum.color",
                      "field": "color"
                    },
                    {
                      "scale": "colorScale",
                      "field": "cValue"
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "axes": [
    {
      "orient": "top",
      "scale": "xScale",
      "domain": false,
      "grid": true,
      "labels": true,
      "ticks": true,
      "tickCount": 4,
      "labelSeparation": 4,
      "format": "~r"
    },
    {
      "orient": "left",
      "scale": "yScale",
      "domain": false,
      "grid": false,
      "labels": true,
      "ticks": false,
      "labelPadding": 5,
      "encode": {
        "title": {
          "update": {
            "align": {
              "value": "right"
            },
            "angle": {
              "value": 0
            },
            "baseline": {
              "value": "bottom"
            },
            "x": {
              "value": 0
            },
            "y": {
              "value": -30
            }
          }
        }
      }
    }
  ],
  "autosize": {
    "type": "fit-x",
    "contains": "padding"
  },
  "config": {
    "axis": {
      "tickOffset": -1
    }
  }
}
