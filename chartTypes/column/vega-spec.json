{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "height": 220,
  "signals": [
    {
      "name": "columnMargin",
      "value": 1
    },
    {
      "name": "minGroupMargin",
      "value": 4
    },
    {
      "name": "numberOfDataSeries",
      "value": 0
    }
  ],
  "data": [
    {
      "name": "table",
      "values": []
    }
  ],
  "scales": [
    {
      "name": "xScale",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "xValue"
      },
      "padding": 0,
      "round": true
    },
    {
      "name": "yScale",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "yValue"
      },
      "nice": true,
      "zero": true,
      "round": true
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_normal"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    },
    {
      "name": "colorScaleLight",
      "type": "ordinal",
      "range": {
        "scheme": "categorical_computed_light"
      },
      "domain": {
        "data": "table",
        "field": "cValue"
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "xValue"
        }
      },
      "encode": {
        "update": {
          "x": {
            "scale": "xScale",
            "field": "xValue"
          },
          "width": {
            "signal": "bandwidth('xScale')"
          }
        }
      },
      "signals": [
        {
          "name": "columnWidth",
          "update": "bandwidth('xScale') / numberOfDataSeries"
        },
        {
          "name": "binnedColumnWidth",
          "update": "columnWidth > (36 + minGroupMargin + columnMargin) ? 36 : columnWidth > (28 + minGroupMargin + columnMargin) ? 24 : columnWidth > (16 + minGroupMargin + columnMargin) ? 16 : 8"
        },
        {
          "name": "width",
          "update": "binnedColumnWidth * numberOfDataSeries"
        },
        {
          "name": "groupMargin",
          "update": "(bandwidth('xScale') - width) / 2"
        }
      ],
      "scales": [
        {
          "name": "barPositionScale",
          "type": "band",
          "range": "width",
          "paddingInner": 0,
          "paddingOuter": 0,
          "domain": {
            "data": "series",
            "field": "cValue"
          }
        }
      ],
      "marks": [
        {
          "type": "rect",
          "name": "bar",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "signal": "groupMargin + scale('barPositionScale', datum.cValue)"
              },
              "y": {
                "scale": "yScale",
                "field": "yValue"
              },
              "y2": {
                "scale": "yScale",
                "value": 0
              },
              "width": {
                "signal": "bandwidth('barPositionScale') - columnMargin"
              },
              "fill": [
                {
                  "test": "datum.colorLight && datum.isHighlighted === false",
                  "field": "colorLight"
                },
                {
                  "test": "datum.color && datum.isHighlighted === true",
                  "field": "color"
                },
                {
                  "test": "datum.isHighlighted === true",
                  "scale": "colorScale",
                  "field": "cValue"
                },
                {
                  "test": "datum.isHighlighted === false",
                  "scale": "colorScaleLight",
                  "field": "cValue"
                },
                {
                  "test": "datum.color",
                  "field": "color"
                },
                {
                  "scale": "colorScale",
                  "field": "cValue"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xScale",
      "grid": false,
      "domain": false,
      "ticks": false,
      "encode": {
        "title": {
          "update": {
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "top"
            },
            "x": {
              "signal": "width"
            },
            "y": {
              "value": 30
            }
          }
        }
      }
    },
    {
      "orient": "left",
      "scale": "yScale",
      "domain": false,
      "grid": true,
      "tickCount": 4
    }
  ],
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "config": {},
  "width": 728
}
