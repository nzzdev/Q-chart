{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Diagramm",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "items": {
        "type": "array",
        "items": {
          "anyOf": ["string", "null"]
        }
      }
    },
    "yAxisLabel": {
      "title": "Y-Achsenbeschriftung",
      "type": "string"
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "properties": {
        "chartType": {
          "title": "Diagrammtyp",
          "type": "string",
          "enum": ["Line", "Bar", "StackedBar"],
          "Q:options": {
            "selectType": "radio",
            "enum_titles": ["Linien", "Säulen", "Gestapelte Säulen"]
          },
          "default": "Line"
        },
        "isColumnChart": {
          "title": "Balken statt Säulen",
          "type": "boolean",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "toolEndpoint",
                "withData": true,
                "endpoint": "option-availability/isColumnChart"
              }
            ]
          }
        },
        "highlightDataSeries": {
          "title": "Hervorhebung",
          "anyOf": ["number", "null"],
          "Q:options": {
            "dynamicEnum": {
              "type": "toolEndpoint",
              "withData": true,
              "endpoint": "dynamic-enum/highlightDataSeries"
            }
          }
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
