{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Diagramm",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, was in der Grafik zu sehen ist, inklusive Einheiten&#46;"
      }
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "Q:options": {
        "notificationChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/supportedDateFormat",
              "fields": ["data"],
              "options": {
                "limit": 8
              }
            },
            "priority": {
              "type": "low",
              "value": 0
            }
          },
          {
            "type": "EmptyData",
            "config": {
              "fields": ["data"]
            },
            "priority": {
              "type": "low",
              "value": 1
            }
          },
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/unsupportedDateFormat",
              "fields": ["data"],
              "options": {
                "limit": 8
              }
            },
            "priority": {
              "type": "medium",
              "value": 0
            }
          },
          {
            "type": "TooManyColumns",
            "config": {
              "fields": ["data"],
              "options": {
                "limit": 8
              }
            },
            "priority": {
              "type": "medium",
              "value": 1
            }
          },
          {
            "type": "HasColumnTitles",
            "config": {
              "fields": ["data"]
            },
            "priority": {
              "type": "medium",
              "value": 2
            }
          },
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/tooManyRows",
              "fields": ["data"],
              "options": {
                "limit": 601
              }
            },
            "priority": {
              "type": "medium",
              "value": 3
            }
          }
        ]
      },
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "minItems": 1
    },
    "allowDownloadData": {
      "title": "Daten zum Herunterladen anbieten",
      "type": "boolean",
      "default": false
    },
    "events": {
      "title": "Annotationen",
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/event-point" },
          { "$ref": "#/definitions/event-range" }
        ]
      },
      "Q:options": {
        "compact": true,
        "expandable": {
          "itemLabelProperty": "label"
        },
        "availabilityChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "option-availability/events",
              "fields": ["data", "options.chartType"]
            }
          }
        ],
        "notificationChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/unsupportedDateFormatEvents",
              "fields": ["events"]
            },
            "priority": {
              "type": "medium",
              "value": 1
            }
          },
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/dateNotInData",
              "fields": ["options.chartType", "data", "events"]
            },
            "priority": {
              "type": "medium",
              "value": 1
            }
          }
        ]
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "Q:options": {
              "placeholder": "Direktlink zur Quelle, http://..."
            },
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "chartType": {
          "title": "Diagrammtyp",
          "type": "string",
          "Q:options": {
            "selectType": "radio",
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/chartType",
                "fields": ["data"]
              }
            },
            "notificationChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "notification/shouldBeBarChart",
                  "fields": ["data", "options.chartType"],
                  "options": {
                    "limit": 2
                  }
                },
                "priority": {
                  "type": "medium",
                  "value": 3
                }
              },
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "notification/shouldBeLineChart",
                  "fields": ["data", "options.chartType"],
                  "options": {
                    "limit": 40
                  }
                },
                "priority": {
                  "type": "medium",
                  "value": 4
                }
              }
            ]
          },
          "default": "Bar"
        },
        "yScaleType": {
          "title": "Y scale type",
          "type": "string",
          "default": "linear",
          "enum": ["linear", "log"],
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-chart"
                }
              }
            ]
          }
        },
        "hideAxisLabel": {
          "title": "Achsenbeschriftung ausblenden",
          "type": "boolean",
          "default": false,
          "Q:options": {
            "notificationChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "notification/hideAxisLabel",
                  "fields": ["data", "options.hideAxisLabel"]
                },
                "priority": {
                  "type": "medium",
                  "value": 5
                }
              }
            ]
          }
        },

        "hideLegend": {
          "title": "Legende ausblenden",
          "type": "boolean",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/hideLegend",
                  "fields": [
                    "data",
                    "options.chartType",
                    "options.colorOverwritesRows"
                  ]
                }
              }
            ]
          }
        },
        "highlightDataSeries": {
          "title": "Hervorhebungen von Datenreihen",
          "type": "array",
          "Q:options": {
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/highlighDataSeriesMaxItems",
                "fields": ["data"]
              }
            },
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/highlightDataSeries",
                  "fields": ["data", "options.chartType"]
                }
              }
            ],
            "layout": "compact",
            "sortable": false
          },
          "items": {
            "title": "Hervorhebung",
            "type": "number",
            "default": 0,
            "Q:options": {
              "dynamicSchema": {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "dynamic-schema/highlightDataSeries",
                  "fields": ["data"]
                }
              },
              "layout": "compact"
            }
          }
        },
        "highlightDataRows": {
          "title": "Hervorhebungen von Zeilen",
          "type": "array",
          "Q:options": {
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/highlightDataRowsMaxItems",
                "fields": ["data"]
              }
            },
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/highlightDataRows",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "layout": "compact",
            "sortable": false
          },
          "items": {
            "title": "Hervorhebung",
            "type": "number",
            "default": 0,
            "Q:options": {
              "dynamicSchema": {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "dynamic-schema/highlighDataRows",
                  "fields": ["data"]
                }
              }
            }
          }
        },
        "annotations": {
          "title": "Beschriftungen",
          "type": "object",
          "properties": {
            "first": {
              "title": "erster Wert",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.first",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "last": {
              "title": "letzter Wert",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.last",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "max": {
              "title": "höchster Wert",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.max",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "min": {
              "title": "tiefster Wert",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.min",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "diff": {
              "title": "Differenz",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.diff",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "valuesOnBars": {
              "title": "Werte auf Balken beschriften (wenn möglich)",
              "type": "boolean",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/annotations.valuesOnBars",
                      "fields": ["options.chartType", "options.barOptions"]
                    }
                  }
                ]
              }
            }
          },
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/annotations",
                  "fields": ["options.chartType", "data"]
                }
              }
            ]
          }
        },
        "barOptions": {
          "title": "Optionen für Säulendiagramme",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/bar",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "expandable": true
          },
          "properties": {
            "isBarChart": {
              "title": "Balken statt Säulen",
              "type": "boolean",
              "default": false,
              "Q:options": {
                "notificationChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "notification/shouldBeBars",
                      "fields": [
                        "data",
                        "options.chartType",
                        "options.barOptions.isBarChart",
                        "options.barOptions.forceBarsOnSmall"
                      ],
                      "options": {
                        "limit": 8
                      }
                    },
                    "priority": {
                      "type": "medium",
                      "value": 6
                    }
                  }
                ]
              }
            },
            "forceBarsOnSmall": {
              "title": "Balken für Mobile",
              "type": "boolean",
              "default": false,
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/forceBarsOnSmall",
                      "fields": [
                        "options.chartType",
                        "options.barOptions.isBarChart"
                      ]
                    }
                  }
                ]
              }
            },
            "maxValue": {
              "title": "Maximaler Wert auf Y-Achse",
              "type": "number"
            }
          }
        },
        "dateSeriesOptions": {
          "title": "Datumsreihe",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/dateseries",
                  "fields": [
                    "data",
                    "options.chartType",
                    "options.barOptions.isBarChart",
                    "options.barOptions.forceBarsOnSmall"
                  ]
                }
              }
            ]
          },
          "properties": {
            "interval": {
              "title": "Achsenformat",
              "type": "string",
              "default": "auto",
              "enum": [
                "auto",
                "decade",
                "year",
                "quarter",
                "quarterWithoutYear",
                "month",
                "monthWithoutYear",
                "week",
                "weekWithoutYear",
                "day",
                "dayWithoutYear",
                "hour",
                "minute",
                "second"
              ],
              "Q:options": {
                "enum_titles": [
                  "automatisch",
                  "Dekaden (2010, 2020)",
                  "Jahre (2021, 2022)",
                  "Quartale (Q1 2021, Q2 2021)",
                  "Quartale (Q1, Q2)",
                  "Monate (Febr&#46; 2021, März 2021)",
                  "Monate (Febr&#46;, März)",
                  "Wochen (KW1 2021, KW2 2021)",
                  "Wochen (KW1, KW2)",
                  "Tage (1&#46;1&#46;2021, 2&#46;1&#46;2021)",
                  "Tage (1&#46;1&#46;, 2&#46;1&#46;)",
                  "Stunden (1&#46;1&#46; 12 Uhr)",
                  "Minuten (1&#46;1&#46; 12&#058;15 Uhr)",
                  "Sekunden (1&#46;1&#46; 12&#058;15&#058;30 Uhr)"
                ],
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/dateSeriesOptions.interval",
                    "fields": ["data"]
                  }
                }
              }
            },
            "prognosisStart": {
              "title": "Start Prognose",
              "oneOf": [
                {
                  "type": "number"
                },
                {
                  "type": "null"
                }
              ],
              "Q:options": {
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/dateSeriesOptions.prognosisStart",
                    "fields": ["data"]
                  }
                }
              }
            },
            "labels": {
              "title": "Anzahl Beschriftungen",
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "enum": ["few", "many"],
              "default": "few",
              "Q:options": {
                "enum_titles": ["wenige", "viele"],
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/dateSeriesOptions.labels",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            }
          }
        },
        "lineChartOptions": {
          "title": "Optionen für Liniendiagramme",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/line",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "expandable": true
          },
          "properties": {
            "minValue": {
              "title": "Minimaler Wert auf Y-Achse",
              "type": "number"
            },
            "maxValue": {
              "title": "Maximaler Wert auf Y-Achse",
              "type": "number"
            },
            "yAxisTicks": {
              "title": "Manuele linien auf Y-aches (durch Komma trennen)",
              "type": "string"
            },
            "reverseYScale": {
              "title": "Y-Achse invertieren",
              "type": "boolean",
              "default": false
            },
            "lineInterpolation": {
              "title": "Interpolation der Linien",
              "type": "string",
              "default": "linear",
              "enum": ["linear", "step-after", "monotone"],
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "UserHasRole",
                    "config": {
                      "role": "expert-chart"
                    }
                  }
                ]
              }
            },
            "isStockChart": {
              "title": "Intraday-Chart",
              "type": "boolean",
              "default": false,
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/line.isStockChart",
                      "fields": ["data", "options.chartType"]
                    }
                  }
                ]
              }
            }
          }
        },
        "areaChartOptions": {
          "title": "Optionen für Flächendiagramme",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-chart"
                }
              },
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/area",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "expandable": true
          },
          "properties": {
            "areaInterpolation": {
              "title": "Interpolation der Flächen",
              "type": "string",
              "default": "linear",
              "enum": ["linear", "step-after", "monotone"]
            },
            "stackType": {
              "title": "Typ",
              "type": "string",
              "default": "zero",
              "enum": ["zero", "center"],
              "Q:options": {
                "enum_titles": ["normal", "stream"]
              }
            },
            "maxValue": {
              "title": "Maximaler Wert auf Y-Achse",
              "type": "number"
            }
          }
        },
        "dotplotOptions": {
          "title": "Optionen für Dot Plots",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/dotplot",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "expandable": true
          },
          "properties": {
            "connectDots": {
              "title": "Punkte verbinden",
              "type": "boolean"
            },
            "minValue": {
              "title": "Minimaler Wert",
              "type": "number"
            },
            "maxValue": {
              "title": "Maximaler Wert",
              "type": "number"
            }
          }
        },
        "arrowOptions": {
          "title": "Optionen für Arrow Charts",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/arrow",
                  "fields": ["options.chartType"]
                }
              }
            ],
            "expandable": true
          },
          "properties": {
            "minValue": {
              "title": "Minimaler Wert",
              "type": "number"
            },
            "maxValue": {
              "title": "Maximaler Wert",
              "type": "number"
            },
            "colorScheme": {
              "title": "Farbschema",
              "type": "number",
              "default": 0,
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "UserHasRole",
                    "config": {
                      "role": "expert-chart"
                    }
                  },
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/arrow.colorScheme",
                      "fields": ["options.chartType"]
                    }
                  }
                ]
              }
            },
            "invertColorScheme": {
              "title": "Farbschema umkehren",
              "type": "boolean",
              "default": false
            }
          }
        },
        "colorOverwritesSeries": {
          "title": "Datenreihenfarbe",
          "type": "array",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-chart"
                }
              },
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/colorOverwritesSeries",
                  "fields": ["options.chartType", "options.colorOverwritesRows"]
                }
              }
            ],
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/colorOverwritesSeries",
                "fields": ["data"]
              }
            },
            "layout": "compact",
            "expandable": {
              "itemLabelTemplate": "${color} - ${position}"
            },
            "sortable": false
          },
          "items": {
            "type": "object",
            "properties": {
              "color": {
                "title": "Farbe normal",
                "type": "string",
                "Q:type": "color"
              },
              "colorLight": {
                "title": "Farbe hell",
                "type": "string",
                "Q:type": "color"
              },
              "position": {
                "title": "Position",
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "null"
                  }
                ],
                "Q:options": {
                  "dynamicSchema": {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "dynamic-schema/colorOverwritesSeriesItem",
                      "fields": ["data"]
                    }
                  }
                }
              }
            }
          }
        },
        "colorOverwritesRows": {
          "title": "Zeilenfarbe",
          "type": "array",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-chart"
                }
              },
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/colorOverwritesRows",
                  "fields": [
                    "data",
                    "options.chartType",
                    "options.colorOverwritesSeries"
                  ]
                }
              }
            ],
            "layout": "compact",
            "expandable": {
              "itemLabelTemplate": "${color} - ${position}"
            },
            "sortable": false
          },
          "items": {
            "type": "object",
            "properties": {
              "color": {
                "title": "Farbe normal",
                "type": "string",
                "Q:type": "color"
              },
              "colorLight": {
                "title": "Farbe hell",
                "type": "string",
                "Q:type": "color"
              },
              "position": {
                "title": "Position",
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "null"
                  }
                ],
                "Q:options": {
                  "dynamicSchema": {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "dynamic-schema/colorOverwritesRowsItem",
                      "fields": ["data"]
                    }
                  }
                }
              }
            }
          }
        },
        "largeNumbers": {
          "title": "Optionen für grosse Werte",
          "type": "object",
          "properties": {
            "divideBy": {
              "title": "Grosse Werte teilen",
              "oneOf": [
                {
                  "type": "number"
                },
                {
                  "type": "null"
                }
              ],
              "enum": [0, 1, 1e3, 1e6, 1e9],
              "default": 0,
              "Q:options": {
                "enum_titles": [
                  "automatisch",
                  "nicht teilen",
                  "durch 1000",
                  "durch 1 Million",
                  "durch 1 Milliarde"
                ]
